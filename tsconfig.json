{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*" : ["./*"],
      "~assets/*": ["./assets/*"],
      "~components/*": ["./components/*"],
      "~pages/*": ["./pages/*"],
      "~static/*": ["./static/*"],
      "~store": ["./.nuxt/store"]
    }
  }
}
